---
import Navbar from "../components/Navbar.astro";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<GoogleFontsOptimizer
			url="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&family=Roboto+Serif:opsz,wght@8..144,400;8..144,600;8..144,700&family=Roboto:wght@400;700&display=swap"
		/>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
